<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Saco do Mamanguá</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="assets/css/style.css" type="text/css">
    <link href="~/js/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/js/bootstrap.css" rel="stylesheet" type="text/css">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/js/Bootstrapcdn/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/js/Bootstrapcdn/font-awesome.min.css" rel="stylesheet">
    <script src="~/js/Bootstrapcdn/bootstrap.min.js"></script>
    <script src="~/js/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/js/Cloudflare/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="~/js/Cloudflare/lightbox.min.css">
</head>

<body>
    <header>
        <img src="~/img/header.jpg">

    </header>
    <nav class="Menu-esquerda" style="padding-left: 20px; width: 250px;">

        <ul>
            <li class="titulo-menu">Menu</li>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <li class="menu">Home</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Passeios">
                <li class="menu">Passeios</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Restaurantes">
                <li class="menu">Restaurantes</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Fotos">
                <li class="menu">Fotos</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="ComoChegar">
                <li class="menu">Como Chegar</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Agendamento">
                <li class="menu">Agende Seu Passeio</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Cadastro">
                <li class="menu">Agendamento Cadastrado</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Depoimento">
                <li class="menu">Depoimentos</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="ListaDepoimento">
                <li class="menu">Lista de Depoimentos</li>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Contato">
                <li class="menu">Contato</li>
            </a>
        </ul>
        <div class="imagens-esquerda">
            <img id="Tempo" src="https://www.tempo.com/wimages/foto312621d717805829e8b7edc704d552e4.png">
            <a id="PrefeituraRJ" href="https://paraty.rj.gov.br/" target="_blank"><img src="~/img/prefeitura.jpg"
                    width="100%"></a>
        </div>
    </nav>
    <article>
        <section class="Conteudo">
            @RenderBody()
        </section>
    </article>



    <footer id="footer" class="footer-1">
        <div class="nome-rodape">
            <h4>Associação dos Moradores de Paraty-Mirim</h4>
            <h5>Paraty-Mirim - RJ</h5>
        </div>
        <div class="icone-rodape">
            <ul>
                <li><a href="https://www.facebook.com/associacaodemoradoresdeparatymirim" target="_blank"><img
                            src="~/img/Facebook.png" width="42px" height="42px"></a></li>
                <li><a href="mailto:assoc.paraty-mirim@hotmail.com"><img src="~/img/email.png" width="42px"
                            height="42px"></a></li>
            </ul>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Cloudflare/jquery.min.js"></script>
    <script src="~/js/Cloudflare/bootstrap.bundle.min.js"></script>
    <script src="~/js/Cloudflare/lightbox.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
